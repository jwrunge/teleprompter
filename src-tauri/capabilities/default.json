{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "enables the default permissions",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"media:allow-export_recording_to_mp4",
		"fs:allow-read-text-file",
		"fs:allow-write-text-file",
		"fs:allow-write-file",
		"fs:allow-exists",
		"fs:allow-mkdir",
		"fs:allow-remove",
		"shell:allow-execute",
		"shell:allow-spawn",
		"shell:allow-stdin-write",
		{
			"identifier": "fs:scope",
			"allow": [
				{ "path": "$APPDATA/files.json" },
				{ "path": "$APPDATA/recordings" },
				{ "path": "$APPDATA/recordings/*" },
				{ "path": "$APPDATA/recordings/**" }
			]
		}
	]
}
