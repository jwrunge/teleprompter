{
	"$schema": "../gen/schemas/mobile-schema.json",
	"identifier": "mobile",
	"description": "Mobile permissions for iOS/Android",
	"windows": ["main"],
	"platforms": ["iOS", "android"],
	"permissions": [
		"core:default",

		"fs:allow-read-text-file",
		"fs:allow-write-text-file",
		"fs:allow-write-file",
		"fs:allow-exists",
		"fs:allow-mkdir",
		"fs:allow-remove",

		{
			"identifier": "fs:scope",
			"allow": [
				{ "path": "$APPDATA/files.json" },
				{ "path": "$APPDATA/recordings" },
				{ "path": "$APPDATA/recordings/*" },
				{ "path": "$APPDATA/recordings/**" }
			]
		}
	]
}
