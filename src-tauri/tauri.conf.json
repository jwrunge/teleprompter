{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Teleprompter",
	"version": "0.1.0",
	"identifier": "com.jacobrunge.teleprompter",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "Teleprompter",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"macOS": {
			"entitlements": "./Entitlements.plist"
		},
		"iOS": {
			"developmentTeam": "Q487SACZC5"
		},
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
